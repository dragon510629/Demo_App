<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 70), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="title"><b><%= micropost.title %></b></span>
  <span class="content"><%= micropost.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
  </span>


  <div class="comment-post<%= micropost.id %>" >
      <% micropost.comments.each do |f| %>
      <div class="media">
        <div class="media-body">
          <span class="media-heading"><b><%= link_to f.user.name, f.user %></b><span>
          <i><%= time_ago_in_words f.created_at %> ago.</i>
          <p><%= f.content %></p>
        </div>
      </div>
<% end %>
</li>